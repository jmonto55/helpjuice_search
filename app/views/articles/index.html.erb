<p style="color: green"><%= notice %></p>

<h1 class="title">JavaScript Articles</h1>
<%= link_to "New article", new_article_path %>
<div data-controller="search" id="articles">
  <input type="text" id="search" placeholder="Search..." data-action="input->search#filterArticles" />
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Content</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td data-search-target="title"><%= article.title %></td>
          <td data-search-target="author"><%= article.author %></td>
          <td data-search-target="content"><%= article.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
